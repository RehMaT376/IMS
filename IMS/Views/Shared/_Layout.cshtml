                    <li>@Html.ActionLink("Products", "Index", "Products",null,new { @class = "nav-link px-2 link-dark" })</li>
                    <li>@Html.ActionLink("Purchase Product", "create", "purchase_stock",null, new { @class = "nav-link px-2 link-dark" })</li>
